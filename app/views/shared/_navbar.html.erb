<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "../mycommunities", class: "navbar-brand" do %>
      <%= image_tag "loopsingle", style: "width: 70px; height: 30px;" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <form action="/search" method="GET" id="search">
      <div class="search-container">
      <label for="query">
        <div class="search-icon">
            <i class="fa-solid fa-magnifying-glass"></i>
        </div>
      </label>

        <input class="search-input" type="text" name="query" placeholder="Search..." onkeydown="if (event.keyCode === 13) this.form.submit()"/>

        <%# <p class="search-placeholder">Search...</p> %>

      </div>
    </form>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>

        <%# <div class="notification">
          <span class="notification-icon"></span>
        </div> %>

        <div class="dropdown">
          <button class="dropdown-btn"><i class="fa-regular fa-bell"></i>
            <%# <span class="notification"></span> %>
          </button>
          <div class="dropdown-content">
            <a href="#">Notification 1</a>
            <a href="#">Notification 2</a>
          </div>
        </div>


          <li class="nav-item">
            <%= link_to "Users", "../users", class: "nav-link" %>
          </li>

          <li class="nav-item">
            <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "nav-link" %>
          </li>

          <li >
          <% if current_user.photo.key%>
            <%= cl_image_tag current_user.photo.key, height: 40, width: 40, crop: :fill, style: "border-radius: 50%; margin-left: 8px"%>
            <% else %>
            <img src="https://res.cloudinary.com/dgqqot40q/image/upload/v1686230942/TheLoop/placeholder_hfuoup.png" alt="A placeholder profile picture" height="45" width="45">
            <% end %>
          </li>

        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
