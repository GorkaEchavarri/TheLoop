
<div class="container mb-3" style="width:900px">
  <%= link_to users_path, { class: "btn btn-outline-danger mt-2" } do %>
      All users
  <% end %>
</div>


<br>

<div class="container justify-content-center mx-12 border rounded" style="width:900px" id="user-card">
  <h1 id="profiletitle" class="m-3"><%= @user.username %>'s Profile Page</h1>
<div class="container d-flex">

  <div class="container d-flex flex-column col-8">
    <div id="biocard" class="card">
      <%= @user.bio %>
    </div>
    <br>

    <div class="row">
    <div class="col-6">
      <div class="mb-2">
        <b>Date of Birth: </b><%= @user.date_of_birth %>
      </div>
      <div>
        <b>Location: </b><%= @user.region %>
      </div>
    </div>

    <div class="col-6">
      <div class="mb-2">
        <b>Status: </b> <%= @user.user_type.capitalize() %>
        <span id="card-user"><%= User::TYPES[@user.user_type] %></span>
      </div>
      <div>
        <b>Diagnosis: </b><%= @user.status %>
      </div>
    </div>
  </div>
  </div>

  <div class="container d-flex flex-column col-4 row text-center">
      <% if @user.photo.key%>
        <%= cl_image_tag @user.photo.key, height: 200, width: 200, crop: :fill, style: "border-radius: 50%;height: 200px;width: 220px;margin: auto;"%>
      <% else %>
        <img src="https://res.cloudinary.com/dgqqot40q/image/upload/v1686230942/TheLoop/placeholder_hfuoup.png" alt="A placeholder profile picture" height="200" width="200">
      <% end  %>
      <strong class="m-2">
      <%= @user.first_name %>
      <%= @user.last_name %>
      </strong>
      <button type="button" class="btn btn-outline-danger m-1 mx-auto">Add as a friend</button>
      <%# <button type="button" class="btn btn-outline-danger mx-auto">Direct message</button> %>
      <%# <%= link_to "Direct message", new_chatroom_path(), class: "btn btn-outline-danger m-1 mx-auto" %>

        <%# <p>Create chat</p> %>
        <%= render '/chatrooms/new', chatroom: @chatroom, user: @user %>
  </div>



</div>
</div>
<br>
